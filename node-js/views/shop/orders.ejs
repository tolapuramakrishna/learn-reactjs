<%- include('../shared/head.ejs') %>
    </head>

    <body>
        <%- include('../shared/navigation.ejs') %>
            <main>
                <% if(orders.length===0) { %>
                    <h1>Nothing there!</h1>
                    <% } else { %>
                        <ul>
                            <% orders.forEach(order=> { %>

                                <li>order no# <%= order._id %>
                                </li>
                                <ul>
                                    <% order.products.forEach(prod=> { %>
                                        <li>
                                            <p>
                                                <%= prod.product.title %> (<span>
                                                    <%= prod.quantity %>
                                                </span>)
                                            </p> 
                                        </li>
                                        <% }) %>
                                </ul>
                                <% }) %>
                        </ul>
                        <% } %>
            </main>
            <%- include('../shared/end.ejs') %>